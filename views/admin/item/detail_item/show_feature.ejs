<div class="tab-pane fade show active" id="show-feature">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form action="/admin/item/add/feature" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required>
                        </div>
                        <div class="form-group">
                            <label for="qty">QTY</label>
                            <input type="number" class="form-control" id="qty" name="qty" placeholder="Enter qty" required>
                        </div>
                        <div class="form-group">
                            <label for="imageUrl">Image</label>
                            <input type="file" class="form-control" id="imageUrl" name="image" required>
                        </div>
                        <input type="hidden" value="<%= itemId %>" name="itemId">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
                <div class="col-md-7">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>QTY</th>
                                    <th>Image URL</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < feature.length; i++) { %>
                                    <tr>
                                        <td><%= i+1 %></td>
                                        <td><%= feature[i].name%></td>
                                        <td><%= feature[i].qty %></td>
                                        <td><img src="http://localhost:3000/<%= feature[i].imageUrl %>" alt="" width="100px"></td>
                                        <td>
                                            <!-- Button trigger modal -->
                                            <form action="/admin/item/<%= itemId %>/feature/<%= feature[i].id %>?_method=DELETE" method="POST">
                                                <a href="javascript:void(0)" type="button" class="btn btn-warning btn-circle btn-update" data-toggle="modal" data-target="#update-modal" data-id="<%= feature[i].id %>" data-name="<%= feature[i].name %>" data-qty="<%= feature[i].qty %>">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="submit" class="btn btn-danger btn-circle"><i class="fas fa-trash-alt"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>